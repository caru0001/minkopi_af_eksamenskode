---
import { Image } from "astro:assets";
import footerdog from "../assets/images/footerdog.webp";
import Button from "../components/Button.astro";
import mentions from "../assets/images/mentions.png";
import trustpilotrating from "../assets/images/trustpilotrating.webp";
import instagram from "../assets/images/instagram.webp";
import facebook from "../assets/images/facebook.webp";
import tiktok from "../assets/images/tiktok.webp";
import youtube from "../assets/images/youtube.webp";
import footerform1 from "../assets/images/footerform1.png";
import tooth from "../assets/images/tooth.svg";
import nograin from "../assets/images/nograin.svg";
import scale from "../assets/images/scale.svg";
import skin from "../assets/images/skin.svg";
---

<article class="lg:grid grid-cols-2 gap-16 md:mx-custom104 pt-20 relative">
  <div class="md:max-w-xl mx-5">
    <h3 class="pb-4 md:pb-8 text-base md:text-2xl font-bold uppercase">DON'T MISS OUT ON TREATS FROM OUR NEWSLETTER</h3>
    <div class="flex items-center bg-GoldenRetriever-500 rounded-full border border-BarkingAtTheMoon-500 px-4 py-2 lg:w-full lg:max-w-xl">
      <input type="email" placeholder="Enter your email address" class="flex-grow text-xs md:text-base bg-transparent outline-none border-none text-BarkingAtTheMoon-500" />
      <div x-data>
        <div x-on:click="alert('Thanks for signing up!')">
          <Button variant="primary" size="small">Sign Up</Button>
        </div>
      </div>
    </div>
  </div>
  <div class="mx-5">
    <h3 class="text-base md:text-2xl pb-8 pt-8 lg:pt-0">We care about you and your dog and we believe that <strong>a healthy pup</strong> = <strong>a happy life</strong></h3>
    <p class="pb-5 text-sm md:text-xl">Learn more about how our products can support your doggoâ€™s health:</p>
    <ul class="font-bold text-sm md:text-xl">
      <li class="pb-3 flex gap-3 items-center">
        <Image src={tooth} alt="tooth" class="w-[40px] md:w-[60px]" />
        <p>Dental hygiene</p>
      </li>
      <li class="pb-3 flex gap-3 items-center">
        <Image src={nograin} alt="grain" class="w-[40px] md:w-[60px]" />
        <p>Grain free</p>
      </li>
      <li class="pb-3 flex gap-3 items-center">
        <Image src={scale} alt="scale" class="w-[40px] md:w-[60px]" />
        <p>Weight management</p>
      </li>
      <li class="pb-3 flex gap-3 items-center">
        <Image src={skin} alt="skin" class="w-[40px] md:w-[60px]" />
        <p>Sensitive skin</p>
      </li>
    </ul>
  </div>
  <Image src={footerdog} alt="picture of dog peeking up" class="w-[400px] h-auto -mb-[40px] lg:-mb-[40px] lg:-mt-[350px] md:ml-12 order-last md:order-none" />
</article>

<article class="relative pt-12 md:pt-0">
  <Image src={footerform1} alt="background form" class="absolute inset-0 w-full h-[850px] md:h-[1100px] lg:h-[800px] z-0 -mt-[130px] md:-mt-[170px] lg:-mt-[50px]" />
  <article class="relative z-10 md:mx-custom104 md:grid grid-cols-3 gap-8 -mt-10 md:pt-44 mx-5">
    <div>
      <h3 class="text-base md:text-2xl font-bold pb-4">Learn More</h3>
      <p class="pb-3 text-xs md:text-base">Social Responsibility</p>
      <p class="pb-3 text-xs md:text-base">Blog</p>
      <p class="pb-3 text-xs md:text-base">Careers</p>
      <p class="pb-3 text-xs md:text-base">Press</p>
    </div>
    <div>
      <h3 class="text-base md:text-2xl font-bold pb-4">Our Services</h3>
      <p class="pb-3 text-xs md:text-base">Terms & Conditions</p>
      <p class="pb-3 text-xs md:text-base">Privacy Policy</p>
      <p class="pb-3 text-xs md:text-base">Cookie Policy</p>
      <p class="pb-12 md:pb-3 text-xs md:text-base">FAQ</p>
    </div>
    <div>
      <h3 class="text-base md:text-2xl font-bold pb-3 md:pb-4">Follow Us on Our Socials</h3>
      <div class="flex gap-8 pb-4">
        <a href="https://www.instagram.com/tails.com_uk/" target="_blank" rel="noopener noreferrer">
          <Image src={instagram} alt="instagram" class="w-[30px] h-[30px] md:w-[35px] md:h-[35px]" />
        </a>
        <a href="https://www.facebook.com/tailsUK?locale=da_DK">
          <Image src={facebook} alt="facebook" class="w-[30px] h-[30px] md:w-[35px] md:h-[35px]" />
        </a>
        <a href="https://www.tiktok.com/@tails.com">
          <Image src={tiktok} alt="tiktok" class="w-[30px] h-[30px] md:w-[35px] md:h-[35px]" />
        </a>
        <a href="https://www.youtube.com/@TailsUK">
          <Image src={youtube} alt="youtube" class="w-[40px] h-[30px] md:w-[40px] md:h-[35px]" />
        </a>
      </div>
      <h3 class="text-base md:text-2xl font-bold pb-4 pt-8 md:pt-8">Our Customers and Their Pups Love Us!</h3>
      <div class="flex items-center gap-1">
        <Image src={trustpilotrating} alt="trustpilot rating" class="w-44 h-full" />
      </div>
    </div>
  </article>
  <div class="relative z-10 md:mx-custom104 pt-12 md:pt-custom90">
    <h3 class="text-base md:text-2xl font-bold pb-4 mx-5">Woof! Not to Brag But We've Been Featured in...</h3>
    <Image src={mentions} alt="logos from newspapers" class="w-full max-w-[600px] h-auto" />
  </div>
</article>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/alpine.min.js" defer></script>
