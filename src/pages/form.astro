---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import dogform from "../assets/images/dogform.webp";
---

<MainLayout title="Tails.com">
  <div class="px-20 md:px-44 mt-8 md:pt-8 pb-16">
    <div class="bg-SalmonTreat-200 rounded-full h-6 shadow-md">
      <div class="bg-SalmonTreat-500 rounded-full h-full" style="width: 10%;"></div>
    </div>
  </div>
  <section class="mx-5 md:mx-custom104 flex flex-col items-center justify-center text-center">
    <h2 class="text-2xl md:text-custom54 font-paytone uppercase pb-4 md:pb-5">Let's Get Started</h2>
    <p class="pb-10 md:pb-16 text-sm md:text-xl">It’s time to figure out the perfect meal plan for your best friend</p>
    <div id="natural language form" class="pb-20 md:pb-24">
      <h3 class="font-poppins text-custom-offwhite text-2xl sm:text-custom32 max-w-4xl leading-relaxed sm:leading-loose font-medium pb-6 md:pb-6">
        I live in <span>
          <select class="w-52 border-b-2 border-dotted border-custom-offwhite bg-transparent text-BarkingAtTheMoon-400 text-2xl sm:text-custom32">
            <option class="bg-GoldenRetriever-500">Ireland</option>
            <option class="bg-GoldenRetriever-500">United Kingdom</option>
            <option class="bg-GoldenRetriever-500">Germany</option>
            <option class="bg-GoldenRetriever-500">France</option>
            <option class="bg-GoldenRetriever-500">Netherlands</option>
            <option class="bg-GoldenRetriever-500">Austria</option>
          </select>
        </span>
        with my dog,
        <span>
          <input type="text" class="w-72 border-b-2 border-dotted border-custom-offwhite bg-transparent text-BarkingAtTheMoon-400 text-2xl sm:text-custom32" placeholder="enter name" />
        </span>
      </h3>
      <h3 class="font-poppins text-custom-offwhite text-2xl sm:text-custom32 max-w-4xl leading-relaxed sm:leading-loose font-medium">
        <span>
          <select class="w-36 border-b-2 border-dotted border-custom-offwhite bg-transparent text-BarkingAtTheMoon-400 text-2xl sm:text-custom32">
            <option class="bg-GoldenRetriever-500">She</option>
            <option class="bg-GoldenRetriever-500">He</option>
          </select>
        </span> is <span>
          <input type="text" class="w-20 border-b-2 border-dotted border-custom-offwhite bg-transparent text-BarkingAtTheMoon-400 text-2xl sm:text-custom32" placeholder="0" />
        </span> years and <span>
          <input type="text" class="w-20 border-b-2 border-dotted border-custom-offwhite bg-transparent text-BarkingAtTheMoon-400 text-2xl sm:text-custom32" placeholder="0" /> months old.
        </span>
      </h3>
    </div>
    <div x-data>
      <div x-on:click="alert('Thank you for your order!')">
        <Button variant="primary" size="large">Continue</Button>
      </div>
    </div>
  </section>
  <section class="bg-BarkingAtTheMoon-500 mt-16 relative">
    <div class="mx-5 md:mx-custom104 grid grid-cols-1 md:grid-cols-2 items-center">
      <div class="relative mt-10 md:-mt-32 order-2 md:order-1">
        <Image src={dogform} alt="picture of dog peeking up" class="w-[200px] md:w-[300px] h-auto mx-auto md:ml-0" />
      </div>
      <div class="text-center md:text-left px-6 md:px-0 mt-5 md:mt-0 order-1 md:order-2">
        <p class="text-GoldenRetriever-100 text-base md:text-xl font-medium leading-relaxed md:max-w-lg animationinviewfade">Don’t worry, if you have more than one dog, you can add another dog later.</p>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  import { animate, inView } from "motion";

  animate("body", { opacity: [0, 1] }, { duration: 1.5 });

  // Inview animation fade in + return
  inView(".animationinviewfade", ({ target }) => {
    animate(target, { opacity: [0, 1] }, { duration: 2 });
    return () => {
      animate(target, { opacity: [0, 1] });
    };
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/alpine.min.js" defer></script>
