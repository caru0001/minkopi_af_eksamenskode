  <Subscription />
</MainLayout>

<script>
  import { animate, stagger, inView } from "motion";

  animate("body", { opacity: [0, 1] }, { duration: 1.5 });

  // Stagger animation + return
  inView(".stagger-item", ({ target }) => {
    animate(
      target,
      {
        opacity: [0, 1],
        transform: ["translateY(20px)", "translateY(0)"],
      },
      {
        delay: stagger(0.3, { start: 0.7 }), // Animerer hvert element med 0.3s forsinkelse
        duration: 0.5, // Hver animation varer 0.5 sekunder
        easing: "ease-out", // Glidende afslutning
      }
    );
    return () => {
      animate(target, {
        opacity: [0, 1],
        transform: ["translateY(20px)", "translateY(0)"],
      });
    };
  });

  // Inview animation fade in + return
  inView(".animationinviewfade", ({ target }) => {
    animate(target, { opacity: [0, 1] }, { duration: 2 });
    return () => {
      animate(target, { opacity: [0, 1] });
    };
  });
</script>
