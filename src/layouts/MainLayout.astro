---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Gotopbutton from "../components/Gotopbutton.astro";
import "../styles/tailwind.css";
import "animate.css";
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/tailsfavicon.svg" />

    <!-- Link til Google Material Symbols for pilen -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Paytone+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet" />
    <title>{Astro.props.title}</title>
  </head>

  <body class="bg-GoldenRetriever-500 font-poppins text-BarkingAtTheMoon-500">
    <header>
      <Navbar />
    </header>
    <Gotopbutton />
    <main>
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
    <script src="/login.js" defer></script>
  </body>
</html>
